<%= form_with(model: @property, local: true) do |form| %>
  <% if @property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@property.errors.count, "error") %> prohibited this property from being saved:</h2>

      <ul>
      <% @property.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <%= form.label :物件名 %><br>
    <%= form.text_field :property_name %>
    <%= form.label :賃料 %><br>
    <%= form.text_field :rent %>円
    <%= form.label :住所 %><br>
    <%= form.text_field :street_address %>
    <%= form.label :築年数 %><br>
    <%= form.text_field :age %>年
    <%= form.label :備考 %><br>
    <%= form.text_area :remarks %>
    <%= form.fields_for :nearstations do |nearstation| %>
    <hr noshade>
    <h2>最寄り駅 <%= nearstation.index + 1 %></h2>
    <%= nearstation.label :路線名 %><br>
    <%= nearstation.text_field :route %>線
    <%= nearstation.label :駅名 %><br>
    <%= nearstation.text_field :station %>駅
    <%= nearstation.label :徒歩分数 %><br>
    <%= nearstation.text_field :minutes_walk %>分<br>
    <% end %>
    <%= form.submit '登録する' %>
<% end %>
